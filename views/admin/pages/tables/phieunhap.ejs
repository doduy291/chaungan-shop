<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Châu Ngân | Nhập kho</title>

    <%- include('../../../partials/css-admin'); %>
</head>

<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Navbar -->
        <%- include('../../../partials/header-admin'); %>
            <!-- /.navbar -->

            <!-- Main Sidebar Container -->
            <aside class="main-sidebar sidebar-dark-primary elevation-4">
                <!-- Brand Logo -->
                <a href="/admin/tongquan" class="brand-link">
                    <img src="../../dist/img/AdminLTELogo.png" alt="AdminLTE Logo"
                        class="brand-image img-circle elevation-3" style="opacity: .8">
                    <span class="brand-text font-weight-light"><b>CHÂU NGÂN</b></span>
                </a>

                <!-- Sidebar -->
                <div class="sidebar">

                    <!-- Sidebar Menu -->
                    <%- include('../../../partials/menu-admin'); %>
                        <!-- /.sidebar-menu -->
                </div>
                <!-- /.sidebar -->
            </aside>

            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h1>Phiếu nhập</h1>
                            </div>
                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                                    <li class="breadcrumb-item active">Nhập kho</li>
                                </ol>
                            </div>
                        </div>
                    </div>
                    <!-- /.container-fluid -->
                </section>

                <!-- Main content -->
                <section class="content">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-12">

                                <!-- /.card -->

                                <div class="card">
                                    <!-- /.card-header -->
                                    <div class="card-body">
                                        <table id="example1" class="table table-bordered table-striped">
                                            <thead>
                                                <tr>
                                                    <th>STT</th>
                                                    <th>Nhà cung cấp</th>
                                                    <th>Số phiếu</th>
                                                    <th>Ngày nhập</th>
                                                    <th>Thành tiền</th>
                                                    <th>Hình thức</th>
                                                    <th>Trạng thái</th>
                                                    <th>Kiểm kho</th>
                                                    <th>Chi tiết</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% if(listPN.length> 0) { for ( var i= 0;i < listPN.length; i++ ){%>
                                                        <tr>
                                                            <td scope="row">
                                                                <%=(i+1)%>
                                                            </td>
                                                            <td>
                                                                <%= listPN[i].nhacungcap.tennhacungcap%>
                                                            </td>
                                                            <td>
                                                                <%= listPN[i].sophieunhap%>
                                                            </td>
                                                            <td>
                                                                <% var a=new Date(listPN[i].ngaynhap) %>
                                                                    <% var b=a.getDate() +"/"+ (a.getMonth() + 1) +"/"+
                                                                        a.getFullYear() %>
                                                                        <!-- <%= listPN[i].ngaynhap%> -->
                                                                        <%= b %>
                                                            </td>
                                                            <td style="color: green;">
                                                                <% var x=new Intl.NumberFormat({ style: 'currency' ,
                                                                    currency: 'VND' }).format(listPN[i].thanhtien) %>
                                                                    <%= x %>
                                                            </td>
                                                            <td>
                                                                <%= listPN[i].hinhthucthanhtoan%>
                                                            </td>
                                                            <% if(listPN[i].trangthai===1){ %>
                                                                <td style="color: green;">
                                                                    Hoàn thành
                                                                </td>
                                                                <% } else { %>
                                                                    <td style="color: red;">
                                                                        Đang giao dịch
                                                                    </td>
                                                                    <% } %>
                                                                        <td>
                                                                            <a href="/admin/tonkho"
                                                                                class="btn btn-primary btn-sm">
                                                                                kiểm
                                                                            </a>
                                                                        </td>
                                                                        <td>
                                                                            <a href="" class="btn btn-primary btn-sm">
                                                                                xem
                                                                            </a>
                                                                        </td>
                                                        </tr>
                                                        <%}};%>
                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <th>STT</th>
                                                    <th>Nhà cung cấp</th>
                                                    <th>Số phiếu</th>
                                                    <th>Ngày nhập</th>
                                                    <th>Thành tiền</th>
                                                    <th>Hình thức</th>
                                                    <th>Trạng thái</th>
                                                    <th>Kiểm kho</th>
                                                    <th>Chi tiết</th>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                    <!-- /.card-body -->
                                </div>
                                <!-- /.card -->
                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- /.container-fluid -->
                </section>
                <!-- /.content -->
            </div>

            <!-- Control Sidebar -->
            <aside class="control-sidebar control-sidebar-dark">
                <!-- Control sidebar content goes here -->
            </aside>
            <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->

    <!-- Script -->
    <%- include('../../../partials/js-admin'); %>
</body>

</html>