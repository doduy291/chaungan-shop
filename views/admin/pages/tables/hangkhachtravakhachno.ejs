<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Châu Ngân | Hóa đơn</title>

    <%- include('../../../partials/css-admin'); %>
        <!--=============================================================================================-->
</head>

<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Navbar -->
        <%- include('../../../partials/header-admin'); %>
            <!-- /.navbar -->

            <!-- Main Sidebar Container -->
            <aside class="main-sidebar sidebar-dark-primary elevation-4">
                <!-- Brand Logo -->
                <a href="/admin/tongquan" class="brand-link">
                    <img src="../../dist/img/AdminLTELogo.png" alt="AdminLTE Logo"
                        class="brand-image img-circle elevation-3" style="opacity: .8">
                    <span class="brand-text font-weight-light"><b>CHÂU NGÂN</b></span>
                </a>

                <!-- Sidebar -->
                <div class="sidebar">

                    <!-- Sidebar Menu -->
                    <%- include('../../../partials/menu-admin'); %>
                        <!-- /.sidebar-menu -->
                </div>
                <!-- /.sidebar -->
            </aside>

            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h1>Hàng khách trả & Khách nợ</h1>
                            </div>
                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                                    <li class="breadcrumb-item active">Hàng khách trả & Khách nợ</li>
                                </ol>
                            </div>
                        </div>
                    </div>
                    <!-- /.container-fluid -->
                </section>

                <section class="content">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="container">
                                            <!-- Nav tabs -->
                                            <ul class="nav nav-tabs">
                                                <li class="nav-item">
                                                    <a class="nav-link active" href="#hangkhachtra">Hàng khách trả</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link" href="#khachno">Khách nợ</a>
                                                </li>
                                            </ul>

                                            <!-- Tab panes -->
                                            <div class="tab-content border mb-3">
                                                <div id="hangkhachtra" class="container tab-pane active"><br>
                                                    <table id="example1" class="table table-bordered table-striped">
                                                        <thead>
                                                            <tr>
                                                                <th>STT</th>
                                                                <th>Số trả hàng</th>
                                                                <th>Tên khách</th>
                                                                <th>Người tạo</th>
                                                                <th>Sản phẩm</th>
                                                                <th>Ngày</th>
                                                            </tr>
                                                        </thead>

                                                        <tbody>
                                                            <% if(HKT.length> 0){for(var i = 0; i < HKT.length; i++){ %>
                                                                    <tr>
                                                                        <td scope="row">
                                                                            <%= (i+1) %>
                                                                        </td>
                                                                        <td>
                                                                            <%= HKT[i].trahang.sotrahang %>
                                                                        </td>
                                                                        <td>
                                                                            <%= HKT[i].trahang.khachhang.tenkhachhang %>
                                                                        </td>
                                                                        <td>
                                                                            <%= HKT[i].trahang.nguoidung.tennguoidung %>
                                                                        </td>
                                                                        <td>
                                                                            <%= HKT[i].sanpham.tensanpham %>
                                                                        </td>
                                                                        <td>
                                                                            <% var a=new Date( HKT[i].trahang.ngaynhan )
                                                                                %>
                                                                                <% var b=a.getDate() +"/"+ (a.getMonth()
                                                                                    + 1) +"/"+ a.getFullYear() +"_"+
                                                                                    a.getHours() + ":" + a.getMinutes()
                                                                                    %>
                                                                                    <%= b %>
                                                                        </td>
                                                                    </tr>
                                                                    <% }} %>
                                                        </tbody>

                                                        <tfoot>
                                                            <tr>
                                                                <th>STT</th>
                                                                <th>Số trả hàng</th>
                                                                <th>Tên khách</th>
                                                                <th>Người tạo</th>
                                                                <th>Sản phẩm</th>
                                                                <th>Ngày</th>
                                                            </tr>
                                                        </tfoot>
                                                    </table>
                                                </div>
                                                <div id="khachno" class="container tab-pane fade"><br>
                                                    <table id="example2" class="table table-bordered table-striped">
                                                        <thead>
                                                            <tr>
                                                                <th>STT</th>
                                                                <th>Số hóa đơn</th>
                                                                <th>Tên khách</th>
                                                                <th>Điện thoại</th>
                                                                <th>Người tạo</th>
                                                                <th>Tiền nợ</th>
                                                                <th>Ngày</th>
                                                            </tr>
                                                        </thead>

                                                        <tbody>
                                                            <% if(HDKN.length> 0){for(var i = 0; i < HDKN.length; i++){
                                                                    %>
                                                                    <tr>
                                                                        <td scope="row">
                                                                            <%= (i+1) %>
                                                                        </td>
                                                                        <td>
                                                                            <%= HDKN[i].sohoadon %>
                                                                        </td>
                                                                        <td>
                                                                            <%= HDKN[i].khachhang.tenkhachhang %>
                                                                        </td>
                                                                        <td>
                                                                            <%= HDKN[i].khachhang.sodienthoai %>
                                                                        </td>
                                                                        <td>
                                                                            <%= HDKN[i].nguoidung.tennguoidung %>
                                                                        </td>
                                                                        <td style="color:red">
                                                                            <% var x=new Intl.NumberFormat({
                                                                                style: 'currency' , currency: 'VND'
                                                                                }).format(HDKN[i].congno) %>
                                                                                <%= x %> đ
                                                                        </td>
                                                                        <td>
                                                                            <% var a=new Date( HDKN[i].ngaytaohoadon) %>
                                                                                <% var b=a.getDate() +"/"+ (a.getMonth()
                                                                                    + 1) +"/"+ a.getFullYear() +"_"+
                                                                                    a.getHours() + ":" + a.getMinutes()
                                                                                    %>
                                                                                    <%= b %>
                                                                        </td>
                                                                    </tr>
                                                                    <% }} %>
                                                        </tbody>

                                                        <tfoot>
                                                            <tr>
                                                                <th>STT</th>
                                                                <th>Số hóa đơn</th>
                                                                <th>Tên khách</th>
                                                                <th>Điện thoại</th>
                                                                <th>Người tạo</th>
                                                                <th>Tiền nợ</th>
                                                                <th>Ngày</th>
                                                            </tr>
                                                        </tfoot>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                </section>
                <!-- /.content -->
            </div>
            <!-- /.content-wrapper -->
            <aside class="control-sidebar control-sidebar-dark">
                <!-- Control sidebar content goes here -->
            </aside>
            <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->

    <!-- Script -->
    <%- include('../../../partials/js-admin'); %>
        <script>
            $(document).ready(function () {
                $(".nav-tabs a").click(function () {
                    $(this).tab('show');
                });
            });
        </script>

</body>

</html>