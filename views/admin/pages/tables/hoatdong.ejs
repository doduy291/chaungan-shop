<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Châu Ngân | Hoạt động</title>

    <%- include('../../../partials/css-admin'); %>
        <!--=============================================================================================-->
</head>

<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Navbar -->
        <%- include('../../../partials/header-admin'); %>
            <!-- /.navbar -->

            <!-- Main Sidebar Container -->
            <aside class="main-sidebar sidebar-dark-primary elevation-4">
                <!-- Brand Logo -->
                <a href="/admin/tongquan" class="brand-link">
                    <img src="../../dist/img/AdminLTELogo.png" alt="AdminLTE Logo"
                        class="brand-image img-circle elevation-3" style="opacity: .8">
                    <span class="brand-text font-weight-light"><b>CHÂU NGÂN</b></span>
                </a>

                <!-- Sidebar -->
                <div class="sidebar">
                    <!-- Sidebar Menu -->
                    <%- include('../../../partials/menu-admin'); %>
                        <!-- /.sidebar-menu -->
                </div>
                <!-- /.sidebar -->
            </aside>

            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h1>Hoạt động</h1>
                            </div>
                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                                    <li class="breadcrumb-item active">Hoạt động</li>
                                </ol>
                            </div>
                        </div>
                    </div>
                    <!-- /.container-fluid -->
                </section>

                <!-- Main content -->
                <section class="content">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-12">
                                <div class="card">

                                    <div class="card">
                                        <!-- <div class="card-header">
                                                <h3 class="card-title">Hóa đơn</h3>
                                            </div> -->
                                        <!-- /.card-header -->
                                        <div class="card-body">
                                            <table id="example1" class="table table-bordered table-striped">
                                                <thead>
                                                    <tr>
                                                        <th>STT</th>
                                                        <th>Người dùng</th>
                                                        <th>Loại</th>
                                                        <th>Thời gian hoạt động</th>
                                                    </tr>
                                                </thead>

                                                <tbody>
                                                    <% if(listHoatDong.length> 0){for(var i=0;i <
                                                            listHoatDong.length;i++){ %>
                                                            <tr>
                                                                <td scope="row">
                                                                    <%= (i+1)%>
                                                                </td>
                                                                <td>
                                                                    <%= listHoatDong[i].nguoidung.tennguoidung %>
                                                                </td>
                                                                <td>
                                                                    <%= listHoatDong[i].loaihoatdong.tenloaihoatdong %>
                                                                </td>
                                                                <td>
                                                                    <% var a=new Date(listHoatDong[i].thoigianhoatdong)
                                                                        %>
                                                                        <% var b=a.getDate() +"/"+ (a.getMonth() + 1)
                                                                            +"/"+ a.getFullYear() +"_"+ a.getHours()
                                                                            + "h:" + a.getMinutes() %>
                                                                            <%= b %>
                                                                </td>
                                                                <%}}%>
                                                            </tr>
                                                </tbody>

                                                <tfoot>
                                                    <tr>
                                                        <th>STT</th>
                                                        <th>Người dùng</th>
                                                        <th>Loại</th>
                                                        <th>Thời gian hoạt động</th>
                                                    </tr>
                                                </tfoot>
                                            </table>
                                        </div>
                                        <!-- /.card-body -->
                                    </div>
                                    <!-- /.card -->

                                    <!-- /.col -->
                                </div>
                                <!-- /.row -->
                            </div>
                            <!-- /.container-fluid -->
                </section>
                <!-- /.content -->
            </div>

            <!-- Control Sidebar -->
            <aside class="control-sidebar control-sidebar-dark">
                <!-- Control sidebar content goes here -->
            </aside>
            <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->

    <!-- Script -->
    <%- include('../../../partials/js-admin'); %>

</body>

</html>