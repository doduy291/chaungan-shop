<div class="wrap-header-cart js-panel-cart">
  <div class="s-full js-hide-cart"></div>

  <div class="header-cart flex-col-l p-l-65 p-r-25">
    <div class="header-cart-title flex-w flex-sb-m p-b-8">
      <span class="mtext-103 cl2"> Giỏ hàng của bạn </span>

      <div class="fs-35 lh-10 cl2 p-lr-5 pointer hov-cl1 trans-04 js-hide-cart">
        <i class="zmdi zmdi-close"></i>
      </div>
    </div>
    <% if(listCart !== null && listCart[0].sanphams.length > 0) { %>
      <div class="header-cart-content flex-w js-pscroll">
        <ul class="header-cart-wrapitem w-full">
          <% for(var i = 0; i < listCart.length; i++ ) { %>
          <% for(j in listCart[i].sanphams)  { %>
          <% listCart[i].sanphams[j].anhsanpham = new Buffer(listCart[i].sanphams[j].anhsanpham).toString('base64'); %>
          <li class="header-cart-item flex-w flex-t m-b-12">
            <div class="header-cart-item-img">
              <img src="data:image/jpeg;base64, <%= listCart[i].sanphams[j].anhsanpham %>" alt="IMG" />
            </div>
            <div class="header-cart-item-txt p-t-8">
              <a href="#" class="header-cart-item-name hov-cl1 trans-04"> <%= listCart[i].sanphams[j].tensanpham %> </a>
              <span class="header-cart-item-info"> <%= listCart[i].sanphams[j].chitiethoadon.soluong %> x <%= listCart[i].sanphams[j].giabanle%> </span>
            </div>
          </li>
          <% }} %>
        </ul>
        
        <div class="w-full">
          <div class="header-cart-total w-full p-tb-40">Tổng: <%= totalPrice %> VND </div>
          <div class="header-cart-buttons flex-w w-full">
            <a
              href="/cart"
              class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-r-8 m-b-10"
            >
              Xem giỏ hàng
            </a>
  
            <a href="/cart/checkout" class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-b-10">
              Thanh toán
            </a>
          </div>
        </div>
      </div>
    <% } else { %>
      <div class="header-cart-content flex-w js-pscroll">
        <div class=" m-b-50">
          <div class="empty-cart-icon">
            <img src="/images/icons/empty-cart-icon.jpg" alt="IMG">
            <h5>Giỏ hàng trống</h5>
          </div>
        </div>
      </div>
    <% } %>

    
  </div>
</div>
